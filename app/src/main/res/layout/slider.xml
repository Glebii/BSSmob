<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_boarding"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/main_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Bishkek Stroi"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/mplusblack"/>

    <TextView
        android:id="@+id/support_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_phrase"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:text="Лучший магазин со строительными материалами"
        android:textAlignment="center"
        android:textSize="16sp"
        android:fontFamily="@font/mplus"
        />

</RelativeLayout>
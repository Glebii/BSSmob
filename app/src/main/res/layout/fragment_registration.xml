<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:foreground="#1EFBAB09">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/city_gif"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:src="@drawable/register_gif"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            app:srcCompat="@drawable/registr_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/sansbolditalic"
            android:text="Регистрация "
            android:textColor="#F5F5F5"
            android:textSize="30dp"
            android:textStyle="italic"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/first_name"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:hint="Введите ваше имя"
            android:fontFamily="@font/sansitalic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:textSize="16dp"
            android:background="@drawable/edittext_shape"/>
        <EditText
            android:id="@+id/last_name"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:hint="Введите вашу фамилию"
            android:fontFamily="@font/sansitalic"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="128dp"
            android:background="@drawable/edittext_shape"/>
        <EditText
            android:textSize="16dp"
            android:id="@+id/user_email"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:fontFamily="@font/sansitalic"
            android:hint="Введите вашу почту"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="176dp"
            android:background="@drawable/edittext_shape"/>
        <EditText
            android:textSize="15dp"
            android:id="@+id/user_password"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:fontFamily="@font/sansitalic"
            android:hint="Введите пароль"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="224dp"
            android:background="@drawable/edittext_shape"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#120B0B0B"
            android:fontFamily="@font/mplus"
            android:text="Зарегестрироваться"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            app:cornerRadius="100dp"
            app:iconPadding="16dp"
            app:icon="@drawable/log_in"
            app:iconGravity="end"
            app:iconSize="15dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>